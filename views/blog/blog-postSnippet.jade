div.post
    - if (post)
        h1
            a(href=post.url)
                = post.title
        span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
        div.post.content
            != post.preview
        div.tags
            - if (post.tags)
                - each tag in post.tags
                    a(href=poet.helpers.tagUrl(tag))
                        span.label.label-info #{tag}
